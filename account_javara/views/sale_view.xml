<odoo>
	<record model="ir.ui.view" id="view_order_fee_form">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//form/sheet/notebook" position="inside">
				<page name="fee" string="Fee">
					<field name="fee_ids">
						<tree editable="bottom">
							<field name="employee_id" options="{'no_create': True}" />
							<field name="percent" />
							<field name="amount" widget="monetary" sum="Total" />
							<field name="currency_id" invisible="1" />
						</tree>
					</field>
				</page>
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view" id="sale_fee_order_view_tree">
		<field name="name">sale.fee.order.tree</field>
		<field name="model">sale.fee.order</field>
		<field name="arch" type="xml">
			<tree string="Fee">
				<field name="name" />
				<field name="date" />
				<field name="employee_id" />
				<field name="analytic_account_id" readonly="1" />
				<field name="order_id" readonly="1" />
				<field name="amount" sum="Total" readonly="1" />
				<field name="currency_id" invisible="1" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="sale_fee_order_view_form">
		<field name="name">sale.fee.order.form</field>
		<field name="model">sale.fee.order</field>
		<field name="arch" type="xml">
			<form string="Fee">
				<header>
					<button name="action_confirm" states="draft"
						string="Send to CMO" type="object" class="oe_highlight" />
					<button name="action_cmo_approve" states="cmo_approve"
						string="Send to Finance" type="object" class="oe_highlight" />
					<!-- <button name="action_validate" string="Validate" type="object"
						states="fin_approve" class="oe_highlight" /> -->
					<button name="action_post" string="Post" type="object"
						states="fin_approve" class="oe_highlight" />					
					<button name="action_cancel"
						states="draft,cmo_approve,fin_approve" string="Cancel"
						type="object" />
					<button name="action_set_draft" states="cancel"
						string="Set to Draft" type="object" />
					<field name="state" widget="statusbar"
						statusbar_visible="draft,cmo_approve,fin_approve,post"
						readonly="1" />
				</header>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="employee_id" options="{'no_create': True}" />
							<field name="analytic_account_id" options="{'no_create': True}" />
							<field name="order_id" options="{'no_create': True}" />
							<field name="invoice_id" options="{'no_create': True}" />
							<field name="payment_move_line_id" options="{'no_create': True}" />
							<field name="amount" />
							<field name="currency_id" invisible="1" />
						</group>
						<group>
							<field name="date" />
							<field name="date_posted" />
							<field name="move_id" readonly="1" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="sale_fee_order_action" model="ir.actions.act_window">
		<field name="name">Fees</field>
		<field name="res_model">sale.fee.order</field>
		<field name="view_mode">tree,form</field>
		<field name="view_type">form</field>
		<!-- <field name="domain">[('employee_id','=',active_id)]</field> -->
	</record>

	<record id="action_view_fee_order_tree" model="ir.actions.act_window.view">
		<field name="sequence">1</field>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="sale_fee_order_view_tree" />
		<field name="act_window_id" ref="sale_fee_order_action" />
	</record>

	<menuitem name="Fees" id="sale_fee_order_submenu"
		parent="sale.sale_menu_root" sequence="4" />

	<menuitem name="Fees" id="sale_fee_order_menu"
		parent="sale_fee_order_submenu" action="sale_fee_order_action"
		sequence="10" />
</odoo>