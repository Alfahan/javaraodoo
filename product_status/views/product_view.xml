<odoo>
	<record model="ir.ui.view" id="product_template_form_view_status_field">
        <field name="name">product.template_status</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="product_status_id"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="product_status_view_tree" model="ir.ui.view" >
		<field name="name">product.status.tree</field>
		<field name="model">product.status</field>
		<field name="arch" type="xml">
			<tree string="Product Status">
				<field name="name" />
			</tree>
		</field>
	</record>

    <record id="product_status_action" model="ir.actions.act_window">
		<field name="name">Product Status</field>
		<field name="res_model">product.status</field>
		<field name="view_type">tree</field>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="product_status_view_tree"/>
	</record>

    <!-- <record id="action_view_product_status_order_tree" model="ir.actions.act_window.view">
		<field name="sequence">1</field>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="product_status_view_tree" />
		<field name="act_window_id" ref="product_status_action" />
	</record> -->

    <menuitem name="Product Status" id="product_status_menu"
		parent="stock.menu_product_in_config_stock" action="product_status_action"
		sequence="10" />
</odoo>